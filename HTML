<body>

  <div class="wrapper">
    <h1>Queues</h1>
    <p>Queue Reversal Tool</p>

    <input type="text" id="queueInput" placeholder="Enter queue elements, e.g. 10, 20, 30">
    <button onclick="reverseQueue()">Reverse Queue</button>

    <div class="output" id="result"></div>
  </div>

  <script>
    function reverseQueue() {
      const input = document.getElementById('queueInput').value;
      const items = input.split(',').map(x => x.trim()).filter(Boolean);

      if (items.length === 0) {
        document.getElementById('result').textContent = "Please enter some values.";
        return;
      }

      // Simulate queue reversal using stack
      const stack = [];
      const queue = [];

      // Enqueue items
      items.forEach(item => queue.push(item));

      // Move from queue to stack
      while (queue.length > 0) {
        stack.push(queue.shift());
      }

      // Move back from stack to queue (reversed)
      while (stack.length > 0) {
        queue.push(stack.pop());
      }

      document.getElementById('result').textContent = "Reversed Queue: " + queue.join(', ');
    }
  </script>

